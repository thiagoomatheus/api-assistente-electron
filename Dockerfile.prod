# Stage 1: build
FROM node:22-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY prisma ./prisma/
COPY . .

ARG DATABASE_URL
ENV DATABASE_URL=$DATABASE_URL
RUN npx prisma generate

# Stage 2: runtime
FROM node:22-alpine

WORKDIR /app

COPY --from=build /app /app

EXPOSE 3333

CMD npx prisma migrate deploy && npx tsx ./src/server.ts